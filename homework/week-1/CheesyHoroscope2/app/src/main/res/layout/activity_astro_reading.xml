

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="abassawo.c4q.nyc.cheesyhoroscope.AstroReading"
    android:background="#ff2aebff">

    tools:context="abassawo.c4q.nyc.cheesyhoroscope.AstroReading">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/zodiacImage"
        android:id="@+id/tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/signTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:id="@+id/zodiacImage"



        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signTitle" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zodiac_Detail"
        android:paddingTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/zodiacImage"
        android:layout_alignRight="@+id/signTitle"
        android:layout_alignEnd="@+id/signTitle" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signDetail"
        android:layout_below="@id/zodiacImage"

        android:textStyle="italic"
        android:layout_alignRight="@+id/zodiacImage"
        android:layout_alignEnd="@+id/zodiacImage" />


</RelativeLayout>
