<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/heading"
        android:src="@drawable/pisces_logo"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--Symbol, Planet, Element, Characteristics-->
    <TextView
        android:id="@+id/two"
        android:text="@string/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="190dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/three"
        android:text="@string/pisces_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="190dp"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/four"
        android:text="@string/planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_alignRight="@+id/two"
        android:layout_alignEnd="@+id/two"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/five"
        android:text="@string/pisces_planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/six"
        android:text="@string/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four"
        android:layout_alignRight="@+id/four"
        android:layout_alignEnd="@+id/four"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/seven"
        android:text="@string/pisces_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five"
        android:layout_alignLeft="@+id/five"
        android:layout_alignStart="@+id/five"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

    <TextView
        android:text="@string/characteristic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/six"
        android:layout_alignRight="@+id/four"
        android:layout_alignEnd="@+id/four"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>
    <TextView
        android:text="@string/pisces_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seven"
        android:layout_alignLeft="@+id/seven"
        android:layout_alignStart="@+id/seven"
        android:layout_marginTop="10dp"
        android:textSize="16sp"/>

</RelativeLayout><!-- From: file:/Users/sufeizhao/Desktop/accesscode_forks/unit-1/homework/Horoscope/app/src/main/res/layout/pisces.xml -->