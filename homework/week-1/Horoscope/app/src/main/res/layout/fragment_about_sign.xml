<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_about_sign"
    tools:context="nyc.c4q.ramonaharrison.horoscope.AboutSignFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:text="Libra"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/signTitle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:layout_below="@id/signTitle"
            android:layout_marginLeft="5dp"
            android:text="September 23 - October 30"
            android:id="@+id/signDateRange" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/imageBox"
            android:gravity="center_horizontal"
            android:layout_below="@id/signDateRange"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:src="@drawable/libra"
                android:id="@+id/signImage" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageBox"
            android:layout_margin="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:text="Description"
            android:id="@+id/signDescription" />
    </RelativeLayout>

</FrameLayout>
