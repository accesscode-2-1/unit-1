<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your comptibilty\n  with someone else!"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="19dp"
        android:textAlignment="center"
        android:textColor="#ffb4b4b4"
        android:textStyle="bold"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/zodiac_array"
        android:prompt="@string/zodiac_prompt"
        android:background="#fff1f1f1"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/btnSubmit"
        android:layout_toStartOf="@+id/btnSubmit" />

    <Spinner
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"

        android:background="#fff1f1f1"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btnSubmit"
        android:layout_toEndOf="@+id/btnSubmit" />

    <TextView
        android:id="@+id/matched_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/btnSubmit"
        android:layout_centerHorizontal="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your zodiac sign"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:layout_above="@+id/spinner"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The other&apos;s zodiac sign"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_above="@+id/spinner2"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/matched_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/btnSubmit"
        android:layout_centerHorizontal="true" />

</RelativeLayout>