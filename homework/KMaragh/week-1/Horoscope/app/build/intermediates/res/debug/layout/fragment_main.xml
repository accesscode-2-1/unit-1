<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/mainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"

        tools:context="ksmaragh.c4q.nyc.horoscope.MainActivity">

        <LinearLayout
            android:id="@+id/firstZodiacLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/aries"
                android:src="@drawable/aries"
                android:adjustViewBounds="true"
                android:background="@null"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/taurus"
                android:src="@drawable/taurus"
                android:adjustViewBounds="true"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/gemini"
                android:src="@drawable/gemini"

                />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/secondZodiacLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

             <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/cancer"
                android:src="@drawable/cancer"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/leo"
                android:src="@drawable/leo"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/virgo"
                android:src="@drawable/virgo"

                />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdZodiacLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/libra"
                android:src="@drawable/libra"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/scorpio"
                android:src="@drawable/scorpio"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/sagittarius"
                android:src="@drawable/sagittarius"

                />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/fourthZodiacLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/capricorn"
                android:src="@drawable/capricorn"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/aquarius"
                android:src="@drawable/aquarius"

                />
            <ImageView
                android:layout_width="@dimen/oneHundred"
                android:layout_height="@dimen/oneHundredFifteen"
                android:id="@+id/pisces"
                android:src="@drawable/pisces"

                />
            </LinearLayout>


    </LinearLayout>

</RelativeLayout>
