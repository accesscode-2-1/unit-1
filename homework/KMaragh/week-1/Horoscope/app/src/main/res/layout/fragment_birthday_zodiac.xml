<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ksmaragh.c4q.nyc.horoscope.birthdayZodiac">

    <LinearLayout
        android:id="@+id/birthdayLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthday"
            android:textSize="30sp"
            android:lines="1"
            android:paddingBottom="20dp"/>

        </LinearLayout>



<LinearLayout
    android:id="@+id/birthdayLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/birthdayLayout1"
    android:paddingBottom="20dp">


    <Spinner
        android:id="@+id/months"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:entries="@array/month"
        android:background="@drawable/border"
        android:paddingRight="10dp"
        />

    <Spinner
        android:id="@+id/days"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:entries="@array/day"
        android:background="@drawable/border"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generateZodiac"
        android:layout_below="@+id/birthdayLayout2"
        android:layout_centerHorizontal="true"/>
<LinearLayout
    android:id="@+id/birthdayLayout3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btnSubmit">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign"
        android:text="@string/yourSign"
        android:paddingTop="20dp"
        android:paddingRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signName"

        android:paddingBottom="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zodiacInfo"
        android:layout_below="@+id/birthdayLayout3" />




</RelativeLayout>
