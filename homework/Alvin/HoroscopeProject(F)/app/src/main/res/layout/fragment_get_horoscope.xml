<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ahhhlvin.c4q.nyc.horoscopeprojectf.GetHoroscope"
    android:id="@+id/R" >


<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">


        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="GET"
            android:id="@+id/getHoroscopeButton"
            android:layout_marginTop="90px"
            android:layout_centerHorizontal="true"
            android:hapticFeedbackEnabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/getHoroscopeView"
            android:layout_below="@+id/image"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="30dp"
            android:id="@+id/image"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/getHoroscopeButton"/>


        <Spinner
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_above="@+id/getHoroscopeButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:hapticFeedbackEnabled="true"
            android:popupBackground="#444444"
            android:dropDownWidth="wrap_content"
            android:layout_marginBottom="59dp" />



    </RelativeLayout>

</ScrollView>