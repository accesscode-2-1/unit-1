<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ahhhlvin.c4q.nyc.horoscopeproject.GetHoroscopeSignActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/datePicker"
        android:layout_alignRight="@+id/txt"
        android:layout_alignEnd="@+id/txt"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="45dp"
        android:textSize="90px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET HOROSCOPE SIGN!"
        android:id="@+id/button"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/datePicker"
        android:layout_toEndOf="@+id/datePicker"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your horoscope sign is:"
        android:id="@+id/txt"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
