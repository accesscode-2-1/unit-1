    <TextView
        android:text="@string/Libra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dip"
        android:gravity="center"
        />
    <TextView
        android:text="@string/libra_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="29dip"
        android:gravity="center"
        android:paddingTop="10dp"
        />


    <TextView
        android:paddingTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_good"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Tactful"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Romantic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Charming"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Just"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Diplomatic"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_bad"
        android:textSize="20dp"
        android:paddingTop="14dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Superficial"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Detached"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Lazy"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Indecisive"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
