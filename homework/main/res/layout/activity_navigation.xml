<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#00008B"
    tools:context="fattyduck.horoscope.Navigation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/zodiac"
        android:id="@+id/navtitle"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signbutton"
        android:id="@+id/signinfobutton"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/navtitle"
        android:onClick="disbut"
        android:layout_centerHorizontal="true"  />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userbutton"
        android:id="@+id/usersignbutton"
        android:onClick="userbut"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/romanbutton"
        android:id="@+id/romanbutton"
        android:layout_marginTop="53dp"
        android:onClick="romanbut"
        android:layout_below="@+id/usersignbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gamebutton"
        android:id="@+id/gamebutton"
        android:onClick="gamebut"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/romanbutton"
        android:layout_centerHorizontal="true"  />

</RelativeLayout>
