<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgr">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/sign_icon"
            style="@style/zodiac_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_sign"
            android:textColor="#ffff"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp" />

        <TextView
            android:id="@+id/sign_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_start_date"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="145dp"/>

    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/frameLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="25dp">

            <TextView
                android:id="@+id/sign_profile"
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/placeholder_lorem"
                android:textColor="#ff152e48"
                android:textSize="18sp"
                android:padding="18dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>