<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CompatibilityFragment">

    <Spinner
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:id="@+id/spinner_sign1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="154dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:id="@+id/spinner_sign2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/spinner_sign1"
        android:layout_alignLeft="@+id/spinner_sign1"
        android:layout_alignStart="@+id/spinner_sign1" />

    <Button
        android:id="@+id/button_submit"
        android:text="@string/button_text_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_sign2"
        android:layout_alignRight="@+id/spinner_sign2"
        android:layout_alignEnd="@+id/spinner_sign2"
        android:layout_marginTop="35dp" />

</RelativeLayout>