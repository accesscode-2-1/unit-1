<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context="activity.HoroscopeSignFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/sign_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/sign_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/zodiac_icon_aries"
        android:scaleType="fitCenter"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/sign_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Date"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sign_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End Date"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/sign_blurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="lorem ipsum"/>

</LinearLayout>
