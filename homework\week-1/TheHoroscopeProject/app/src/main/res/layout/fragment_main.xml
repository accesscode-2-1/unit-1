<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main$PlaceholderFragment"
    android:id="@+id/mainscreen"
    android:background="#ffffeb00">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horosmainpic"
        android:layout_gravity="center|top"
        android:contentDescription="@string/watt"
        android:src="@drawable/horoscope_icon"
        android:clickable="true"
        android:cropToPadding="false" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text= "@string/mainscreentitle"
        android:id="@+id/maintitle"
        android:layout_gravity="center_horizontal|top"
        android:textColor="#ff808080"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mainscreentext"
        android:id="@+id/mainscreenintro"
        android:layout_gravity="center_horizontal|bottom"
        android:textStyle="bold"
        android:textColor="#ff798082"
        android:nestedScrollingEnabled="true"
        android:autoText="false"
        android:gravity="start|fill|bottom|top"
        android:elegantTextHeight="true"
        android:textAlignment="inherit"
        android:textIsSelectable="true"
        android:clickable="false"
        android:linksClickable="false"
        android:background="#ffffd500" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_gravity="center_horizontal|bottom">

    </ScrollView>


</FrameLayout>
